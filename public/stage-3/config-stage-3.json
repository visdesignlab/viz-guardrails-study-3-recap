{
  "$schema": "https://raw.githubusercontent.com/visdesignlab/viz-guardrails-study/main/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Reviewing Communicating With Interactive Data Visualizations",
    "version": "pilot",
    "authors": ["VDL"],
    "date": "2024-01-11",
    "description": "A study challenging participants to review linecharts.",
    "organizations": ["University of Utah"]
  },
  "uiConfig": {
    "contactEmail": "maxim.lisnic@utah.edu",
    "logoPath": "assets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": false,
    "urlParticipantIdParam": "PROLIFIC_PID",
    "studyEndMsg": "**Thank you for completing the study. You may click this link and return to Prolific**: [https://app.prolific.com/submissions/complete?cc=C19P3VR0](https://app.prolific.com/submissions/complete?cc=C19P3VR0)"
  },
  "recordStudyAudio": false,
  "tasksToNotRecordAudio": [
    "introduction",
    "consent",
    "end",
    "introduction-viral",
    "introduction-stock",
    "check-month",
    "check-text"
  ],
  "baseComponents": {
    "stock-simple-c": {
      "instruction": "<br><br><br><br>You've come across this visualization.<br>Please review the chart, and then answer the question below.",
      "instructionLocation": "aboveStimulus",
      "type": "react-component",
      "path": "viz-guardrails/DataExplorer.tsx",
      "parameters": {
        "dataset": "clean_stocks",
        "start_date": "2023-01-01",
        "end_date": "2024-01-01",
        "allow_time_slider": false,
        "allow_guardrail_selector": false,
        "allow_selection": false,
        "allow_help": true,
        "x_var": "Date",
        "y_var": "Value",
        "cat_var": "name",
        "group_var": "industry",
        "initial_selection": ["Stock B", "Stock C", "Stock D"]
      },
      "nextButtonLocation": "belowStimulus",
      "response": [
        {
          "id": "agree",
          "type": "likert",
          "location": "belowStimulus",
          "prompt": "The visualization supports the idea that stock C is the best performing stock in the industry:",
          "preset": 5,
          "leftLabel": "Strongly disagree",
          "rightLabel": "Strongly agree",
          "required": true
        },
        {
          "id": "explain",
          "type": "longText",
          "location": "belowStimulus",
          "prompt": "Briefly explain your reasoning for the previous question. What information in the visualization and caption led you to this decision? (1-2 sentences)",
          "required": true,
          "placeholder": "I chose this amount because..."
        }
      ]
    },
    "stock-simple-e": {
      "instruction": "<br><br><br><br>You've come across this visualization.<br>Please review the chart, and then answer the question below.",
      "instructionLocation": "aboveStimulus",
      "type": "react-component",
      "path": "viz-guardrails/DataExplorer.tsx",
      "parameters": {
        "dataset": "clean_stocks",
        "start_date": "2023-01-01",
        "end_date": "2024-01-01",
        "allow_time_slider": false,
        "allow_guardrail_selector": false,
        "allow_selection": false,
        "allow_help": true,
        "x_var": "Date",
        "y_var": "Value",
        "cat_var": "name",
        "group_var": "industry",
        "initial_selection": ["Stock B", "Stock C", "Stock D", "Stock E"]
      },
      "nextButtonLocation": "belowStimulus",
      "response": [
        {
          "id": "agree",
          "type": "likert",
          "location": "belowStimulus",
          "prompt": "The visualization supports the idea that stock E is the best performing stock in the industry:",
          "preset": 5,
          "leftLabel": "Strongly disagree",
          "rightLabel": "Strongly agree",
          "required": true
        },
        {
          "id": "explain",
          "type": "longText",
          "location": "belowStimulus",
          "prompt": "Briefly explain your reasoning for the previous question. What information in the visualization and caption led you to this decision? (1-2 sentences)",
          "required": true,
          "placeholder": "I chose this amount because..."
        }
      ]
    },
    "stock-simple-a": {
      "instruction": "<br><br><br><br>You've come across this visualization.<br>Please review the chart, and then answer the question below.",
      "instructionLocation": "aboveStimulus",
      "type": "react-component",
      "path": "viz-guardrails/DataExplorer.tsx",
      "parameters": {
        "dataset": "clean_stocks",
        "start_date": "2023-01-01",
        "end_date": "2024-01-01",
        "allow_time_slider": false,
        "allow_guardrail_selector": false,
        "allow_selection": false,
        "allow_help": true,
        "x_var": "Date",
        "y_var": "Value",
        "cat_var": "name",
        "group_var": "industry",
        "initial_selection": [
          "Stock B",
          "Stock C",
          "Stock D",
          "Stock E",
          "Stock A"
        ]
      },
      "nextButtonLocation": "belowStimulus",
      "response": [
        {
          "id": "agree",
          "type": "likert",
          "location": "belowStimulus",
          "prompt": "The visualization supports the idea that stock A is the best performing stock in the industry:",
          "preset": 5,
          "leftLabel": "Strongly disagree",
          "rightLabel": "Strongly agree",
          "required": true
        },
        {
          "id": "explain",
          "type": "longText",
          "location": "belowStimulus",
          "prompt": "Briefly explain your reasoning for the previous question. What information in the visualization and caption led you to this decision? (1-2 sentences)",
          "required": true,
          "placeholder": "I chose this amount because..."
        }
      ]
    }
  },
  "components": {
